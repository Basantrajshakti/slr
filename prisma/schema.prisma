// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String  @id @default(cuid())
    name         String
    email        String  @unique
    passwordHash String
    image        String?
    tasks        Task[]
}

enum TaskPriority {
    LOW
    MEDIUM
    HIGH
    URGENT
}

enum TaskTag {
    DEVELOPMENT
    DESIGN
    TESTING
    REVIEW
    BUG
    FEATURE
}

model Task {
    id          String       @id @default(cuid())
    title       String
    description String? // Optional detailed description
    deadline    DateTime? // Optional deadline
    priority    TaskPriority @default(MEDIUM) // Enum for priority
    tags        TaskTag[] // Array of enums for tags
    teamMembers String[] // Array of team member names or IDs (stored as strings)
    createdBy   User         @relation(fields: [createdById], references: [id])
    createdById String
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt
}
